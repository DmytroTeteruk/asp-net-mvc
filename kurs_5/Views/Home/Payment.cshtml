<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Payment
    </h1>

    <div class="alert alert-primary" role="alert">
        Total Price: @ViewBag.Price
    </div>
    <form action="/Home/Order" method="post" style="margin-bottom: 50px;margin-left:15%">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationDefault01">Card number</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="Card number" required>
                <img src="https://narzur.ru/wp-content/uploads/2019/07/maxresdefault-5-e1563280209419.jpg" style="
          position: absolute;
          margin-top: -45px;
          margin-left: 270px;
          height: 50px;
          width: 100px;" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2 mb-3">
                <label for="validationDefaultUsername">Month</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Month" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <label for="validationDefaultUsername">Year</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Year" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <label for="validationDefault02">CVV</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="CVV" required>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                <label class="form-check-label" for="invalidCheck2">
                    Agree to terms and conditions
                </label>
            </div>
        </div>
        <input class="form-check-input" type="hidden" name="ProductId" value="@ViewBag.ProductId" id="invalidCheck2" required>
        <button class="btn btn-primary" type="submit">Pay</button>
    </form>
</div>
